import java.io.File; 
import java.io.IOException; 
import java.io.FileWriter;

public class Report {
	
	public Report() {
		// TODO Auto-generated constructor stub
	}
	
	
	public static void generateProductReport(String path) {
		
	    try {
	        File myObj = new File(path+"/"+"report.txt");
	        if (myObj.createNewFile()) {
	        	FileWriter myWriter = new FileWriter(path+"/"+"report.txt");
	            myWriter.write("Product Report\n");
	            myWriter.write("==============\n");
	            //parse products sql query here 
	            myWriter.close();	
	          System.out.println("File created: " + myObj.getName());
	        } else {
	          System.out.println("File already exists.");
	        }
	      } catch (IOException e) {
	        System.out.println("An error occurred.");
	        e.printStackTrace();
	      }
	    
	    
		
	}
	
public static void generateEmployeeReport(String path) {
		
	    try {
	        File myObj = new File(path+"/"+"report.txt");
	        if (myObj.createNewFile()) {
	        	FileWriter myWriter = new FileWriter(path+"/"+"report.txt");
	            myWriter.write("Employee Report\n");
	            myWriter.write("==============\n");
	            //parse products sql query here 
	            myWriter.close();	
	          System.out.println("File created: " + myObj.getName());
	        } else {
	          System.out.println("File already exists.");
	        }
	      } catch (IOException e) {
	        System.out.println("An error occurred.");
	        e.printStackTrace();
	      }
	    
	    
		
	}
	
	
	
	
	
	
	
	
	
	

}
